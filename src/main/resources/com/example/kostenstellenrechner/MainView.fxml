<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="452.0" prefWidth="451.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kostenstellenrechner.MainViewController">
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" text="Import" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <items>
           <MenuItem mnemonicParsing="false" text="Delete" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <TabPane prefHeight="412.0" prefWidth="458.0" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="Data">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                     <VBox layoutY="7.0" prefHeight="452.0" prefWidth="451.0">
                        <children>
                           <HBox prefHeight="27.0" prefWidth="451.0">
                              <children>
                                 <DatePicker fx:id="FromDatePicker" promptText="From" />
                                 <DatePicker id="UntilDatePicker" fx:id="UntilDatePicker" promptText="To" showWeekNumbers="true">
                                    <HBox.margin>
                                       <Insets left="10.0" />
                                    </HBox.margin>
                                 </DatePicker>
                                 <Button fx:id="SearchButton" mnemonicParsing="false" text="Filter">
                                    <HBox.margin>
                                       <Insets left="10.0" right="10.0" />
                                    </HBox.margin>
                                 </Button>
                              </children>
                           </HBox>
                           <TableView fx:id="DataTable" />
                        </children>
                     </VBox>
                  </children>
               </AnchorPane>
         </content>
       </Tab>
       <Tab text="Machines">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                     <VBox layoutX="-4.0">
                        <children>
                           <TableView fx:id="MachinesTable" />
                        </children>
                     </VBox>
                  </children></AnchorPane>
         </content>
       </Tab>
     </tabs>
   </TabPane>
</VBox>
